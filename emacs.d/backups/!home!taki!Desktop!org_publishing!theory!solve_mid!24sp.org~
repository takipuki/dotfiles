* 05
1D-array
#+begin_src C -n
#include <stdio.h>
void main() {
    int N; scanf("%d", &N);
    for (int i = 0; i < N; i++) scanf("%d", &arr[i]);

    int K; scanf("%d", &K);

    for (int i = 0; i < N; i++)
        if (i % 2 == 0) arr[i] += K;
        else            arr[i] -= K;
}
#+end_src
