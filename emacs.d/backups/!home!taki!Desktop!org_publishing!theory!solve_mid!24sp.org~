* 03
a) Pattern '2'
   #+begin_src C -n
   #include <stdio.h>
   
   int main() {
       int n; scanf("%d", &n);
    
       for(int i = 0; i < n; i++)
           putchar('*');
       putchar('\n');
    
       for(int i = 1; i < n/2; i++) {
           for (int j = 0; j < n-1; j++) putchar(' ');
           printf("*\n");
       }
    
       for(int i = 0; i < n; i++)
           putchar('*');
       putchar('\n');
    
       for(int i = n/2+1; i < n-1; i++)
           printf("*\n");
    
       for(int i = 0; i < n; i++)
           putchar('*');
       putchar('\n');
   }

   #+end_src

b) Rewrite
   #+begin_src C
   int i = 0, count = 0;
   for (int n = 12345; n != 0; ) {
       printf("%d", n % 10);
       count++;
       while (i < count) {
           printf("%d", n /= 10);
           i++;
       }
       printf("\n");
   }
   #+end_src

