#include <stdio.h>

int main() {
    int n; scanf("%d ", &n);
    
    char str[101];
    int i;
    char ch = 0;
    for (; n; n--) {
        for (i = 0; (ch = getchar()) != '\n' && ch != EOF; i++)
            str[i] = ch;
        str[i] = '\0';

        if (i <= 10)
            puts(str);
        else
            printf("%c%d%c\n", str[0], i-2, str[i-1]);
    }
}
