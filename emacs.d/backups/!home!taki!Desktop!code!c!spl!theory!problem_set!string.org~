* 04
#+begin_src C -n
#include <stdio.h>

int main() {
    char ch;
    int count = 0;
    do {
        scanf("%c", &ch);
        count++;
    } while (ch != '\n');
    count--; // removing the '\n' at the end

    printf("%d\n", count);
}
#+end_src
