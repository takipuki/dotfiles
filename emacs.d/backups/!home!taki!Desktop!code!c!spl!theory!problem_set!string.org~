#+begin_src C -n
#include <stdio.h>
 
int main() {
    char ch; scanf(" %c", &ch);
 
    if (ch >= '0' && ch <= '9')
        printf("%d\n", ch - '0');
    else
        printf("Wrong input!\n");
}
