#+begin_src C -n
#include <stdio.h>

int main() {
    char ch;
    char str1[100];
    int len1 = 0;
    do {
        scanf("%c", &ch);
        str1[len1++] = ch;
    } while (ch != '\n');
    len1--;
    
    char str2[100];
    int len2 = 0;
    do {
        scanf("%c", &ch);
        str2[len2++] = ch;
    } while (ch != '\n');
    len2--;

    for (int i = 0; i < len2; i++)
        str1[len1++] = str2[i];
    str1[len1] = '\0';

    printf("%s\n", str1);
}
#+end_src
* 11
#+begin_src C -n
#include <stdio.h>

int main() {
    char ch;
    char str1[100];
    int len1 = 0;
    do {
        scanf("%c", &ch);
        str1[len1++] = ch;
    } while (ch != '\n');
    len1--;
    
    char str2[100];
    int len2 = 0;
    do {
        scanf("%c", &ch);
        str2[len2++] = ch;
    } while (ch != '\n');
    len2--;

    if (len2 > len1) {
        printf("Not substring\n");
        return 0;
    }

    for (int i = 0; i < len1; i++) {
        if (str1[i] == str2[0]) {
            int flag = 1;
            for (int j = 1; j < len2; j++) {
                if (str1[i+j] != str2[j]) {
                    flag = 0;
                    break;
                }
            }
            if (flag) {
                printf("Substring\n");
                return 0;
            }
        }
    }

    printf("Not substring\n");
}
#+end_src
* 12
#+begin_src C -n
#include <stdio.h>

int main() {
    char ch;
    char str[100];
    int len = 0;
    do {
        scanf("%c", &ch);
        str[len++] = ch;
    } while (ch != '\n');
    len--;

    for (int i = 0; i < len; i++)
        if (str[i] == ' ')
            putchar('\n');
        else
            putchar(str[i]);
    putchar('\n');
}
#+end_src
