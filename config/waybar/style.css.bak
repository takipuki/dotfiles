@define-color bas #EFF1F5;
@define-color blue #89B4FA;
@define-color sky #89DCEB;
@define-color red #F38BA8;
@define-color pink #F5C2E7;
@define-color lavender #B4BEFE;
@define-color rosewater #F5E0DC;
@define-color flamingo #F2CDCD;
/*@define-color fg #D9E0EE;*/
@define-color fg #4C4F69;
/*@define-color fg @bas;*/
@define-color green #A6E3A1;
@define-color dark-fg #161320;
@define-color peach #FAB387;
@define-color gray2 #6E6C7E;
@define-color black4 #575268;
@define-color black3 #302D41;
@define-color maroon #EBA0AC;

@define-color bg-hover #1A1A28;
/*@define-color bg #1E1E2E;*/
@define-color bg #EFF1F5;

@define-color accent @lavender;
/*@define-color crust @dark-fg;*/
@define-color border @gray2;

* {
  min-height: 0;
  margin: 0;
  padding: 0;
  border-radius: 0;
  font-family: "Ubuntu Nerd Font", "Symbols Nerd Font", "Font Awesome 6 Free";
  font-size: 11pt;
  padding-bottom: 0;
}

#pulseaudio,
#custom-add-workspace,
#custom-arch-pill,
#workspaces,
#window,
#custom-minimize-button,
#custom-close-button,
#custom-special-workspace,
#custom-playerctl,
#tray,
#network,
#cpu,
#memory,
#temperature,
#backlight,
#clock,
#battery {
  border: 1px solid @border;
  margin-top: 2px;
}

tooltip {
  background: @bg;
  color: @fg;
  border: 2px solid @border;
}

window#waybar {
  background-color: transparent;
  color: @fg;
}

/*
window#waybar.solo {
  background-color: @bg;
  color: @fg;
}
*/

window#waybar.solo #workspaces button {
  border-radius: 0px;
}

#window {
  margin: 5px;
  padding-left: 10px;
  padding-right: 10px;
  color: @fg;
  background-color: @bg;
}

window#waybar.empty #window,
window#waybar.empty #custom-minimize-button,
window#waybar.empty #custom-close-button {
  opacity: 0;
}

#workspaces {
  margin: 5px 3px 0 0;
  padding-left: 3px;
  padding-right: 3px;
  background-color: @bg;
}

#workspaces button {
  color: @fg;
}

#workspaces button.active {
  color: @red;
}

#custom-add-workspace {
  margin: 8px 0 3px 0;
  /*padding: 2px 4px 0 4px;*/
  padding: 0px 5px 1px 4px;
  color: @red;
  background-color: rgba(0,0,0,0.0);
  border: 1px solid @red;
}

#custom-arch-pill {
  margin: 5px 5px 0 7px;
  padding-left: 7px;
  padding-right: 6px;
  background-color: @accent;
  color: @dark-fg;
}

#custom-minimize-button {
  margin: 5px 0px 0px 5px;
  font-weight: bold;
  padding-left: 9px;
  padding-right: 7px;
  border-right: 0;
  color: @green;
  background-color: @bg;
}

#custom-close-button {
  margin: 5px 0px 0px 0px;
  padding-left: 7px;
  padding-right: 8px;
  border-left: 0;
  color: @red;
  background-color: @bg;
}

#custom-special-workspace {
  margin: 5px 0px 0px 5px;
  padding-left: 7px;
  padding-right: 8px;
  color: @blue;
  background-color: @bg;
}

#mode {
  margin: 5px;
  padding-left: 10px;
  padding-right: 10px;
  background-color: @bg;
  color: @peach;
}

#network {
  margin: 5px 5px 5px 0;
  padding-left: 10px;
  padding-right: 10px;
  background-color: @bg;
  color: @fg;
}
/* #network.wifi, */
/* #network.ethernet { */
/*   color: @green; */
/* } */
#network.linked {
  color: @peach;
}
#network.disconnected,
#network.disabled {
  color: @red;
}

#pulseaudio,
#cpu,
#memory,
#temperature,
#backlight,
#tray,
#battery {
  margin: 5px 0 0px 5px;
  padding-left: 7px;
  padding-right: 7px;
  color: @fg;
  background-color: @bg;
}

#custom-playerctl {
  margin: 5px;
  padding-left: 10px;
  padding-right: 10px;
  color: @fg;
  background-color: @bg;
}

#custom-cafeine {
  margin: 5px;
  padding-left: 10px;
  padding-right: 10px;
  color: @fg;
  background-color: @bg;
}

#pulseaudio.muted {
  background-color: @red;
  border: 1px solid @red;
}

#clock {
  margin: 5px 7px 0px 5px;
  padding-left: 7px;
  padding-right: 7px;
  color: @fg;
  background-color: @bg;
}
/* bottom waybar */
