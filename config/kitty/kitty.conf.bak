kitty +kitten themes --reload-in=all "Catppuccin-Latte"
tab_bar_min_tabs            1
tab_bar_edge                bottom
tab_bar_style               powerline
tab_powerline_style         slanted
tab_title_template          {title}{' :{}:'.format(num_windows) if num_windows > 1 else ''}

# appearence --------------------------------
font_family JetBrainsMono Nerd Font
font_size 13.0
#background #eff1f5
#foreground #4c4f69
#background_opacity 0.8

# tabs --------------------------------------
#tab_bar_align right
#tab_bar_edge top
#tab_bar_margin_height 0.0 0.0
##tab_bar_style powerline
##tab_powerline_style slanted
#tab_bar_style separator
#tab_separator " | "
#tab_title_template {index}

# navigation --------------------------------
map alt+1 goto_tab 1
map alt+2 goto_tab 2
map alt+3 goto_tab 3
map alt+4 goto_tab 4
map ctrl+shift+t new_tab_with_cwd
#map alt+t select_tab
map ctrl+shift+left move_window left
map ctrl+shift+right move_window right
map ctrl+shift+up move_window up
map ctrl+shift+down move_window down
map ctrl+shift+enter launch --cwd=current

# window ------------------------------------
#window_border_width 1pt
#active_border_color #88c0d0
#inactive_border_color #000000
#enabled_layouts stack,splits
#map ctrl+shift+o layout_action rotate

# misc --------------------------------------
map ctrl+shift+r load_config_file
